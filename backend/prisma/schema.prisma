enum HospitalizationType {
  GENERAL
  UCI
  NEONATOS
  INFECCIOSOS
}

enum HospitalizationStatus {
  ACTIVA
  ALTA_PENDIENTE
  ALTA
  FALLECIDO
  TRANSFERIDO
}

