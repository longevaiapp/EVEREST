  studyQS         Boolean             @default(false)
  studyRX         Boolean             @default(false)
  studyUS         Boolean             @default(false)
  studyEGO        Boolean             @default(false)
  studyECG        Boolean             @default(false)
  studyElectrolitos Boolean           @default(false)
  studySNAP       Boolean             @default(false)
  
