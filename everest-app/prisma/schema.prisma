generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

// ===========================================
// USER MODEL - Basic model to test connection
// ===========================================
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String?
  role          UserRole  @default(USER)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@map("users")
}

enum UserRole {
  ADMIN
  RECEPCION
  MEDICO
  FARMACIA
  LABORATORIO
  USER
}
